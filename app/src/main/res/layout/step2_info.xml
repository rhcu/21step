<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:background="@drawable/map"
    tools:context="com.enotik.a21steps.Step2Info"
    android:layout_height="match_parent">

    <android.support.v7.widget.Toolbar
        android:id="@+id/my_toolbar"
        android:layout_width="0dp"
        android:layout_height="54dp"
        android:background="@color/colorPrimaryDark"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="0dp"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toTopOf="@+id/imageView2"
        app:layout_constraintVertical_bias="0.0">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="@string/app_name"
            android:textColor="@color/textColor"
            android:textSize="26sp" />

    </android.support.v7.widget.Toolbar>
    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="284dp"
        android:layout_height="419dp"
        app:srcCompat="@drawable/shape"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="8dp"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintVertical_bias="0.704" />
    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="91dp"
        android:layout_height="78dp"
        app:srcCompat="@drawable/info"
        android:layout_marginTop="8dp"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_bias="0.501"
        android:layout_marginBottom="8dp"
        app:layout_constraintVertical_bias="0.031"
        app:layout_constraintTop_toBottomOf="@+id/my_toolbar"
        app:layout_constraintBottom_toTopOf="@+id/buttonClear" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="245dp"
        android:layout_height="69dp"
        android:text="@string/step2_info_part1"
        android:textStyle="bold"
        android:gravity="center"
        android:textColor="@color/textColor"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="@+id/imageView2"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="@+id/imageView2"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toBottomOf="@+id/imageView2"
        android:layout_marginBottom="8dp"
        app:layout_constraintVertical_bias="0.242"
        android:textSize="13.5sp"
        app:layout_constraintTop_toTopOf="@+id/imageView3"
        app:layout_constraintHorizontal_bias="0.504" />
    <TextView
        android:id="@+id/textViewPart2"
        android:layout_width="245dp"
        android:layout_height="51dp"
        android:text="@string/step2_info_part2"
        android:textColor="@color/textColor"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="@+id/imageView2"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="@+id/imageView2"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toBottomOf="@+id/imageView2"
        android:layout_marginBottom="8dp"
        app:layout_constraintVertical_bias="0.409"
        android:textSize="12sp"
        app:layout_constraintTop_toTopOf="@+id/imageView3"
        app:layout_constraintHorizontal_bias="0.504" />
    <TextView
        android:id="@+id/textViewPart3"
        android:layout_width="245dp"
        android:layout_height="66dp"
        android:text="@string/step2_info_part3"
        android:textColor="@color/textColor"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="@+id/imageView2"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="@+id/imageView2"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toBottomOf="@+id/imageView2"
        android:layout_marginBottom="8dp"
        app:layout_constraintVertical_bias="0.562"
        android:textSize="12sp"
        app:layout_constraintTop_toTopOf="@+id/imageView3"
        app:layout_constraintHorizontal_bias="0.504" />

    <TextView
        android:id="@+id/textViewPart4"
        android:layout_width="245dp"
        android:layout_height="44dp"
        android:text="@string/step2_info_part4"
        android:textColor="@color/textColor"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="@+id/imageView2"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="@+id/imageView2"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toBottomOf="@+id/imageView2"
        android:layout_marginBottom="8dp"
        app:layout_constraintVertical_bias="0.698"
        android:textSize="12sp"
        app:layout_constraintTop_toTopOf="@+id/imageView3"
        app:layout_constraintHorizontal_bias="0.504" />
    <TextView
        android:id="@+id/textViewPart5"
        android:layout_width="245dp"
        android:layout_height="66dp"
        android:text="@string/step2_info_part5"
        android:textColor="@color/textColor"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="@+id/imageView2"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="@+id/imageView2"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toBottomOf="@+id/imageView2"
        android:layout_marginBottom="8dp"
        app:layout_constraintVertical_bias="0.866"
        android:textSize="12sp"
        app:layout_constraintTop_toTopOf="@+id/imageView3"
        app:layout_constraintHorizontal_bias="0.504" />
    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="8dp"
        android:textColor="@color/titleColor"
        android:textStyle="bold"
        android:text="Шаг 2"
        android:textSize="13sp"
        app:layout_constraintLeft_toLeftOf="@+id/imageView2"
        app:layout_constraintRight_toLeftOf="@+id/imageView3"
        app:layout_constraintTop_toTopOf="@+id/imageView3"
        app:layout_constraintVertical_bias="0.913"
        app:layout_constraintHorizontal_bias="0.36"
        app:layout_constraintBottom_toBottomOf="@+id/imageView3" />
    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="8dp"
        android:textColor="@color/titleColor"
        android:textStyle="bold"
        android:text="Информация"
        android:textSize="13sp"
        app:layout_constraintTop_toTopOf="@+id/imageView3"
        app:layout_constraintVertical_bias="0.913"
        app:layout_constraintHorizontal_bias="0.801"
        app:layout_constraintRight_toRightOf="@+id/imageView2"
        app:layout_constraintBottom_toBottomOf="@+id/imageView3"
        app:layout_constraintLeft_toRightOf="@+id/imageView3" />

    <Button
        android:id="@+id/buttonClear"
        android:layout_width="110dp"
        android:layout_height="35dp"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/circled_corner_button"
        android:text="@string/clear"
        android:textColor="@color/textColor"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/imageView2"
        app:layout_constraintLeft_toLeftOf="@+id/imageView2"
        app:layout_constraintRight_toRightOf="@+id/imageView2"
        app:layout_constraintVertical_bias="0.98"
        app:layout_constraintTop_toBottomOf="@+id/textViewPart5" />

</android.support.constraint.ConstraintLayout>