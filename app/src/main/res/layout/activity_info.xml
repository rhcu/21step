<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/textColor"
    android:orientation="vertical"
    tools:context="com.enotik.a21steps.Info">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        app:theme="@style/ThemeOverlay.AppCompat"
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:background="@color/colorPrimaryDark"
        android:fitsSystemWindows="true"
        android:minHeight="?attr/actionBarSize"
        app:titleTextColor="@color/textColor">


        <TextView
            android:visibility="visible"
            android:id="@+id/toolbar_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:fontFamily="sans-serif-medium"
            android:text="О нас"
            android:textColor="@color/textColor"
            android:textSize="22sp"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:layout_marginRight="8dp"/>


    </android.support.v7.widget.Toolbar>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_weight="1"
                android:layout_marginBottom="8dp"
                android:layout_marginTop="8dp"
                android:id="@+id/iconAboutUs"
                android:layout_width="match_parent"
                android:layout_height="110dp"
                app:srcCompat="@drawable/ic_launcher" />

            <TextView
                android:id="@+id/descrAboutUs"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:layout_marginStart="8dp"
                android:layout_weight="5"
                android:gravity="center"
                android:text="21 Steps - образовательное приложение для развития у детей важных для современного города навыков. Через прохождение ситуаций с получением инструкций и объяснением ошибок приложение повысит детскую информативную грамотность, умение принимать решения и навыки критического мышления.
В следующей версии: лидерборд"
                android:textColor="@color/darkGrey"
                android:textSize="22sp"
                android:visibility="visible" />

        </LinearLayout>

    </ScrollView>

</LinearLayout>