<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/map"
    tools:context="com.enotik.a21steps.Step1Activity">
    <android.support.v7.widget.Toolbar
        android:id="@+id/my_toolbar"
        android:layout_width="0dp"
        android:layout_height="54dp"
        android:background="@color/colorPrimaryDark"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="0dp"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toTopOf="@+id/imageView2"
        app:layout_constraintVertical_bias="0.0">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="@string/app_name"
            android:textColor="@color/textColor"
            android:textSize="26sp" />

    </android.support.v7.widget.Toolbar>

    <ImageView
        android:id="@+id/imageViewRectangle"
        android:layout_width="261dp"
        android:layout_height="404dp"
        app:srcCompat="@drawable/shape"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="8dp"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="8dp"
        app:layout_constraintVertical_bias="0.68"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        app:layout_constraintHorizontal_bias="0.504"
        tools:layout_editor_absoluteY="115dp"
        android:contentDescription="@null" />
    <ImageView
        android:id="@+id/imageViewSituation"
        android:layout_width="102dp"
        android:layout_height="89dp"
        app:srcCompat="@drawable/situation"
        android:layout_marginTop="8dp"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="@+id/textViewSituation"
        android:layout_marginBottom="8dp"
        app:layout_constraintVertical_bias="0.007"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:contentDescription="@string/situation_image"
        app:layout_constraintTop_toBottomOf="@+id/my_toolbar" />
    <TextView
        android:id="@+id/textViewStepNumber"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="8dp"
        android:textColor="@color/titleColor"
        android:textStyle="bold"
        android:text="Шаг 1"
        android:textSize="13sp"
        app:layout_constraintLeft_toLeftOf="@+id/imageViewRectangle"
        app:layout_constraintRight_toLeftOf="@+id/imageViewSituation"
        app:layout_constraintVertical_bias="0.824"
        app:layout_constraintHorizontal_bias="0.333"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        app:layout_constraintBottom_toTopOf="@+id/textViewSituation"
        app:layout_constraintTop_toTopOf="@+id/imageViewSituation" />
    <TextView
        android:id="@+id/textViewEx"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="8dp"
        android:textColor="@color/titleColor"
        android:textStyle="bold"
        android:text="@string/zadanie"
        android:textSize="13sp"
        app:layout_constraintVertical_bias="0.824"
        app:layout_constraintHorizontal_bias="0.75"
        app:layout_constraintRight_toRightOf="@+id/imageViewRectangle"
        app:layout_constraintLeft_toRightOf="@+id/imageViewSituation"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        app:layout_constraintTop_toTopOf="@+id/imageViewSituation"
        app:layout_constraintBottom_toTopOf="@+id/textViewSituation" />
    <Button
        android:id="@+id/buttonBack"
        android:layout_width="110dp"
        android:layout_height="48dp"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/circled_corner_button"
        android:text="@string/back"
        android:textColor="@color/textColor"
        android:textStyle="bold"

        android:onClick="onClick"

        app:layout_constraintBottom_toBottomOf="@+id/imageViewRectangle"
        app:layout_constraintLeft_toLeftOf="@+id/imageViewRectangle"
        app:layout_constraintRight_toRightOf="@+id/imageViewRectangle"
        app:layout_constraintVertical_bias="0.698"
        app:layout_constraintHorizontal_bias="0.066"
        app:layout_constraintTop_toBottomOf="@+id/textViewSituation"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp" />
    <Button
        android:id="@+id/buttonNext"
        android:layout_width="110dp"
        android:layout_height="48dp"
        android:layout_marginBottom="27dp"
        android:layout_marginLeft="147dp"

        android:onClick="onClick"

        android:background="@drawable/circled_corner_button"
        android:text="@string/next"
        android:textColor="@color/textColor"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/imageViewRectangle"
        app:layout_constraintLeft_toLeftOf="@+id/buttonBack"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="@+id/imageViewRectangle"
        app:layout_constraintHorizontal_bias="1.0"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/textViewSituation"
        app:layout_constraintVertical_bias="1.0" />

    <TextView
        android:id="@+id/textViewSituation"
        android:layout_width="226dp"
        android:layout_height="232dp"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:gravity="center"
        android:text="@string/step1_situation"
        android:textColor="@color/textColor"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="@+id/imageViewRectangle"
        app:layout_constraintHorizontal_bias="0.473"
        app:layout_constraintLeft_toLeftOf="@+id/imageViewRectangle"
        app:layout_constraintRight_toRightOf="@+id/imageViewRectangle"
        app:layout_constraintVertical_bias="0.237"
        app:layout_constraintTop_toTopOf="@+id/imageViewRectangle" />
</android.support.constraint.ConstraintLayout>